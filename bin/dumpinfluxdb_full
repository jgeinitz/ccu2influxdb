#!/bin/bash
DAT=`TZ=UTC date '+%Y%m%d_%X'`
TARGET=/disk/Backups/influxdbDump
influxd backup -portable ${TARGET}/influxdb_$DAT 2>&1 >/dev/null
cd ${TARGET}
tar cpzf  ${TARGET}/influxdb_${DAT}.tar.gz  influxdb_$DAT
/bin/rm -rf ${TARGET}/influxdb_$DAT
#gzip -9 ${TARGET}/influxdb_$DAT
fil1=`ls -tr influxdb_* | tail -2| head -1`
fil2=`ls -tr influxdb_* | tail -1`
if [ $fil1 != $fil2 ]
then
  x1=`ls -l $fil1 | awk '{ print $5 }'`
  x2=`ls -l $fil2 | awk '{ print $5 }'`
  if [ "$x1" = "$x2" ]
  then
    /bin/rm $fil1
  fi
fi
cnt=`ls -1 | wc -l`
while [ $cnt -gt 10 ]
do
  x=`ls -1rt influxdb_* | head -1`
  /bin/rm $x
  cnt=`ls -1 influxdb_* | wc -l`
done
exit 0
